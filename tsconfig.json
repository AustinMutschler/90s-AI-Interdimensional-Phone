{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "strict": false,
    "skipLibCheck": true,
  },
  "exclude": ["tests", "dist", "**/*.test.ts", "coverage"]
}
